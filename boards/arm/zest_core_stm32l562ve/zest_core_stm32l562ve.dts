/dts-v1/;
#include <st/l5/stm32l562Xe.dtsi>
#include <st/l5/stm32l562vetx-pinctrl.dtsi>
#include "sixtron_connector.dtsi"

/ {
	model = "CATIE Zest Core STM32l562VE board";
	compatible = "catie,zest-core-stm32l562ve";

	chosen {
		zephyr,console = &usart2;
		zephyr,shell-uart = &usart2;
		zephyr,sram = &sram0;
		zephyr,flash = &flash0;
	};

	leds {
		compatible = "gpio-leds";
		led_0: led_0 {
			gpios = <&gpiob 5 GPIO_ACTIVE_HIGH>;
			label = "User LED0";
		};
	};

	gpio_keys {
		compatible = "gpio-keys";
		user_button: button {
			label = "User Button";
			gpios = <&gpioh 3 GPIO_ACTIVE_LOW>;
		};
	};

	aliases {
		led0 = &led_0;
		sw0 = &user_button;
	};
};

&clk_hsi48 {
	status = "okay";
};

&clk_msi {
	status = "okay";
	msi-range = <6>;
	msi-pll-mode;
};

&clk_lse {
	status = "okay";
};

&pll {
	div-m = <1>;
	mul-n = <55>;
	div-p = <7>;
	div-q = <2>;
	div-r = <2>;
	clocks = <&clk_msi>;
	status = "okay";
};

&rcc {
	clocks = <&pll>;
	clock-frequency = <DT_FREQ_M(110)>;
	ahb-prescaler = <1>;
	apb1-prescaler = <1>;
	apb2-prescaler = <1>;
};

&usart3 {
	pinctrl-0 = <&usart3_tx_pd8 &usart3_rx_pd9>;
	pinctrl-names = "default";
	current-speed = <115200>;
	status = "okay";
};

&usart2 {
	pinctrl-0 = <&usart2_tx_pa2 &usart2_rx_pa3>;
	pinctrl-names = "default";
	current-speed = <115200>;
	status = "okay";
};

&i2c2 {
	pinctrl-0 = <&i2c2_scl_pb10 &i2c2_sda_pb11>;
	pinctrl-names = "default";
	status = "okay";
};

&spi2 {
	pinctrl-0 = <&spi2_sck_pb10 &spi2_miso_pb14 &spi2_mosi_pb15>;
	pinctrl-names = "default";
	cs-gpios = <&gpiob 2 GPIO_ACTIVE_LOW>;
	status = "okay";
};

&timers1 {
	status = "okay";

	pwm1: pwm {
		pinctrl-0 = <&tim1_ch1_pa8>;
		pinctrl-names = "default";
		status = "okay";
	};

	pwm2: pwm {
		pinctrl-0 = <&tim1_ch2_pa9>;
		pinctrl-names = "default";
		status = "okay";
	};
};

&timers4 {
	status = "okay";

	pwm3: pwm {
		pinctrl-0 = <&tim4_ch3_pd14>;
		pinctrl-names = "default";
		status = "okay";
	};
};

&adc1 {
	pinctrl-0 = <&adc1_in1_pc0 &adc1_in2_pc1 &adc1_in3_pc2 &adc1_in4_pc3>;
	pinctrl-names = "default";
	st,adc-clock-source = <SYNC>;
	st,adc-prescaler = <4>;
	status = "okay";
};

&dac1 {
	pinctrl-0 = <&dac1_out1_pa4>;
	pinctrl-names = "default";
	status = "okay";
};
